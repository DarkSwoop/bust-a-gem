{
  "name": "bust-a-gem",
  "displayName": "Bust A Gem",
  "license": "MIT",
  "description": "",
  "version": "0.0.1",
  "publisher": "gurgeous",
  "repository": {
    "type": "git",
    "url": "https://github.com/gurgeous/bust-a-gem.git"
  },
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:extension.openGem", "onLanguage:ruby"],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.openGem",
        "title": "Bust-A-Gem: Open Gem..."
      }
    ],
    "configuration": {
      "title": "Bust-A-Gem settings",
      "properties": {
        "bustagem.bundle": {
          "type": "string",
          "default": "bundle show --paths",
          "description": "Bundler command to list gem paths."
        },
        "bustagem.gem": {
          "type": "string",
          "default": "gem env gemdir",
          "description": "Command to locate gem directory."
        },
        "bustagem.rip": {
          "type": "string",
          "default": "ripper-tags -f TAGS -R",
          "description": "Command to create TAGS File."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "tslint": "^5.8.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
